{% extends 'site.html.twig' %}

{% block title %}HOME{% endblock %}

{% block content %}
    <div class="row">
        {% for client in clients %}
            <div class="col-lg-3">
                <div class="card border-success mb-3" style="max-width: 20rem;">
                    <div class="card-header">{{ client.name }}</div>
                    <div class="card-body">
                        <h4 class="card-title">email : {{ client.email }}</h4>
                        <p class="card-text">address : {{ client.address }}</p>
                        <p class="card-text">{{ client.phoneNumber }}</p>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
